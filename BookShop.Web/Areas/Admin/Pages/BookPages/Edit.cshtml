@page
@model BookShop.Web.Areas.Admin.Pages.BookPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.Id" />
            <div class="form-group">
                <label asp-for="Book.Name" class="control-label"></label>
                <input asp-for="Book.Name" class="form-control" />
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Authors" class="control-label"></label>
                @{
                    List<string> authorName = new List<string>();
                    foreach (var item in Model.Book.Authors)
                    {
                        authorName.Add(item.Name);
                    }
                }
                <select class="form-control" asp-items="new SelectList(authorName)"></select>
                <span asp-validation-for="Book.Authors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Description" class="control-label"></label>
                <input asp-for="Book.Description" class="form-control" />
                <span asp-validation-for="Book.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Image" class="control-label"></label>
                <input asp-for="Book.Image" type="file" class="form-control" />
                <span asp-validation-for="Book.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.AddDate" class="control-label"></label>
                <input asp-for="Book.AddDate" class="form-control" />
                <span asp-validation-for="Book.AddDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.File" class="control-label"></label>
                <input asp-for="Book.File" type="file" class="form-control" />
                <span asp-validation-for="Book.File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Price" class="control-label"></label>
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

