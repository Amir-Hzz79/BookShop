@page
@using BookShop.DataLayer.Models
@model BookShop.Web.Areas.Admin.Pages.BookPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Authors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].AddDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].File)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i=0; i< Model.Books.Count; i++) {
            Book book = Model.Books[i];
            List<string> authorsName=new List<string>();
            foreach (var item in book.Authors)
            {
                authorsName.Add(item.Name);
            }

            <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Books[i].Name)
            </td>
            <td>
                <select class="form-control" asp-items="new SelectList(authorsName)"></select>
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Books[i].Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Books[i].Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Books[i].AddDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Books[i].File)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Books[i].Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@Model.Books[i].Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@Model.Books[i].Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@Model.Books[i].Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
