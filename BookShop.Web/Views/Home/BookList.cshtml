@model IEnumerable<BookShop.DataLayer.Models.Book>

<!-- Books Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="text-center mb-5">
                <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;">Books</h5>
                <h1>Our Books</h1>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="ca col-lg-4 col-md-6 mb-4">
                    <div class="rounded overflow-hidden mb-2">
                        <img class="img-fluid" src="img/course-1.jpg" alt="">
                        <div class="bg-secondary p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <small class="m-0"><i class="far fa-clock text-primary mr-2"></i>@item.AddDate.ToShortDateString()</small>
                            </div>
                            <a class="h5" asp-controller="Book" asp-action="Index" >@item.Name</a>
                            <div class="border-top mt-4 pt-4">
                                <div class="d-flex justify-content-between">
                                    <h6 class="m-0"><i class="fa fa-star text-primary mr-2"></i>4.5 <small>(250)</small></h6>
                                    <h5 class="m-0">$@item.Price</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
    <!-- Books End -->
